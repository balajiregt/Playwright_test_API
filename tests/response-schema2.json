{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "confirmed": {
      "type": "boolean"
    },
    "block_height": {
      "type": "integer"
    },
    "block_hash": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{64}$" 
    },
    "block_time": {
      "type": "integer",
      "minimum": 0 
    }
  },
  "required": ["confirmed", "block_height", "block_hash", "block_time"]
}
